# Package managers
alias apt='sudo apt'
alias nala='sudo nala'
alias dnf='sudo dnf'
alias pac='sudo pacman'

# Python
alias py='python3'

# Vim and Neovim
alias nv='nvim'
alias v='vim'

# Git
alias gst='git status'
alias ga='git add'
alias gaa='git add --all'

alias gc='git commit'
alias gcm='git commit -m'

alias gps='git push'
alias gpl='git pull'
alias gcl='git clone'
alias gs='git switch'

alias grh='git reset --hard'
alias grhead='git reset HEAD'

alias lg='lazygit'

# Newsboat
alias nws='newsboat'

# Eza
alias ls='eza --group-directories-first --icons'
alias ll='ls -lh --git'
alias ll='ls -lh'
alias la='ll -a'
alias tree='ll --tree --level=2'

# Display images in terminal with Kitty
alias icat='kitten icat'

# Misc
alias ff='fastfetch'
alias ht='htop'
alias bt='btop'
alias rel='source $ZSHRC'
