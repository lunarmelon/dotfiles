# Package managers
alias apt='sudo apt'
alias nala='sudo nala'
alias dnf='sudo dnf'
alias pac='sudo pacman'

# Python
alias py='python3'

# Vim and Neovim
alias nv='nvim'
alias v='vim'

# Git
alias gst='git status'
alias ga='git add'
alias gaa='git add --all'

alias gc='git commit'
alias gcm='git commit -m'

alias gps='git push'
alias gpl='git pull'
alias gcl='git clone'
alias gs='git switch'

# Newsboat
alias nws='newsboat'

# Display images in terminal with Kitty
alias icat='kitten icat'

# Misc
alias neof='neofetch'
alias ff='fastfetch'
alias ht='htop'
alias bt='btop'
alias rel='source $ZSHRC'
